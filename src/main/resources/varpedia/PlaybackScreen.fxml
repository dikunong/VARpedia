<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="varpedia.controllers.PlaybackController">
   <children>
      <Pane fx:id="mediaPane" VBox.vgrow="ALWAYS">
         <children>
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" />
         </children>
      </Pane>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button fx:id="playBtn" mnemonicParsing="false" onAction="#pressPlayButton" prefWidth="50.0" styleClass="main-button" text="||">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Button>
            <Slider fx:id="timeSlider" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </Slider>
            <Label fx:id="timeLabel" text="0:00:00/0:00:00">
               <HBox.margin>
                  <Insets right="16.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="volLabel" text="Vol: 100%">
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </Label>
            <Slider fx:id="volSlider" maxWidth="80.0">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Slider>
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#pressExitButton" prefWidth="50.0" styleClass="sec-button" text="Exit" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
