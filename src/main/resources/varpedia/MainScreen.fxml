<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="varpedia.controllers.MainScreenController">
   <children>
      <Label text="Existing Creations:">
         <VBox.margin>
            <Insets left="8.0" top="8.0" />
         </VBox.margin>
      </Label>
      <ListView VBox.vgrow="SOMETIMES">
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
      </ListView>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
         <items>
            <Button fx:id="playBtn" mnemonicParsing="false" onAction="#pressPlayButton" prefWidth="100.0" text="Play" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#pressDeleteButton" prefWidth="100.0" text="Delete" />
            <Button fx:id="createBtn" mnemonicParsing="false" onAction="#pressCreateButton" prefWidth="100.0" text="Create New..." />
         </items>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" />
         </padding>
      </ToolBar>
   </children>
</VBox>
