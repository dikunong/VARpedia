<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="800.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="varpedia.controllers.MainController">
   <children>
      <Label styleClass="heading" text="Existing Creations">
         <VBox.margin>
            <Insets left="16.0" top="8.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Sort creations by:">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="sortChoiceBox" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="4.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <TableView fx:id="creationTableView" items="${controller.creationList}" VBox.vgrow="SOMETIMES">
        <placeholder>
           <Label text="Make your first creation by clicking the &quot;Create New...&quot; button!" />
        </placeholder>
        <columns>
          <TableColumn fx:id="creationNameCol" editable="false" minWidth="110.0" prefWidth="340.0" text="Creation name" />
          <TableColumn fx:id="creationConfCol" editable="false" minWidth="90.0" prefWidth="120.0" text="Confidence" />
          <TableColumn fx:id="creationViewCol" editable="false" minWidth="90.0" prefWidth="220.0" text="Last viewed" />
        </columns>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
      </TableView>
      <HBox>
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="playBtn" mnemonicParsing="false" onAction="#pressPlayButton" prefWidth="120.0" styleClass="sec-button" text="Play">
                     <HBox.margin>
                        <Insets right="4.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#pressDeleteButton" prefWidth="120.0" text="Delete">
                     <styleClass>
                        <String fx:value="sec-button" />
                        <String fx:value="red-button" />
                     </styleClass></Button>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="createBtn" mnemonicParsing="false" onAction="#pressCreateButton" prefWidth="190.0" styleClass="main-button" text="Create New..." />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
