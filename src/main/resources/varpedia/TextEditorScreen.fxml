<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="varpedia.controllers.TextEditorController">
   <children>
      <Label text="Wikipedia search result:">
         <VBox.margin>
            <Insets bottom="8.0" />
         </VBox.margin>
      </Label>
      <TextArea fx:id="wikiTextArea" VBox.vgrow="SOMETIMES" />
      <HBox alignment="TOP_RIGHT">
         <children>
            <VBox prefWidth="100.0">
               <children>
                  <Button fx:id="previewBtn" mnemonicParsing="false" onAction="#pressPreviewButton" text="Preview" />
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#pressSaveButton" text="Save Chunk">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
            <VBox alignment="TOP_RIGHT">
               <children>
                  <HBox>
                     <children>
                        <Label text="Voice:">
                           <HBox.margin>
                              <Insets right="4.0" top="4.0" />
                           </HBox.margin></Label>
                        <ChoiceBox fx:id="voiceChoiceBox" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <Button fx:id="assembleBtn" mnemonicParsing="false" onAction="#pressAssembleButton" text="Assemble Chunks">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin></Button>
                  <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#pressCancelButton" text="Cancel">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="8.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
