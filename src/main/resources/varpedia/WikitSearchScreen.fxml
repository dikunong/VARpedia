<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="varpedia.controllers.WikitSearchController">
   <children>
      <Label text="Enter a term to search on Wikipedia:" />
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" maxWidth="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#pressSearchButton" prefWidth="140.0" styleClass="main-button" text="Search">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#pressCancelButton" prefWidth="130.0" text="Cancel">
               <styleClass>
                  <String fx:value="sec-button" />
                  <String fx:value="red-button" />
               </styleClass></Button>
         </children>
         <VBox.margin>
            <Insets top="8.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <ProgressIndicator fx:id="loadingWheel" />
            <Label fx:id="loadingLabel" text="Searching Wikipedia...">
               <HBox.margin>
                  <Insets left="8.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
